<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0"
            prefWidth="1280.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gbsdevelopers.gbdziennik.LoginSceneController">
   <ImageView fx:id="backgroundImage" fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true"/>
   <VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0">
      <padding>
         <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
      </padding>
      <Label text="GBDZIENNIK">
         <font>
            <Font name="Bauhaus 93" size="96.0"/>
         </font>
      </Label>
      <Label text="Identyfikator">
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </VBox.margin>
      </Label>
      <TextField fx:id="loginTextField" promptText="Identyfikator">
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="320.0" right="320.0" top="20.0"/>
         </VBox.margin>
      </TextField>
      <Label text="Hasło">
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </VBox.margin>
      </Label>
      <PasswordField fx:id="passwordPasswordField" promptText="Hasło">
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="320.0" right="320.0" top="20.0"/>
         </VBox.margin>
      </PasswordField>
      <Label fx:id="loginInfo" textFill="RED">
         <font>
            <Font name="System Bold Italic" size="12.0"/>
         </font>
      </Label>
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonAction" text="Zaloguj się">
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </VBox.margin>
      </Button>
   </VBox>
</AnchorPane>
