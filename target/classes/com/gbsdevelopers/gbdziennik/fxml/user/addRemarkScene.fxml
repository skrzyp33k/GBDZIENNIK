<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="640.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gbsdevelopers.gbdziennik.user.AddRemarkController">
    <ImageView fx:id="backgroundImage" fitHeight="640.0" fitWidth="480.0" pickOnBounds="true" preserveRatio="true"/>
    <VBox alignment="CENTER" prefHeight="640.0" prefWidth="480.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <Label text="Uczeń">
                <font>
                    <Font name="Arial Black" size="16.0"/>
                </font>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Label>
            <ChoiceBox fx:id="studentsChoiceBox" prefWidth="150.0">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </ChoiceBox>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
            <Label text="Treść">
                <font>
                    <Font name="Arial Black" size="16.0"/>
                </font>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </Label>
            <TextArea fx:id="contentTextArea" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity" prefHeight="400.0" prefWidth="350.0" wrapText="true">
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
                <padding>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                </padding>
                <font>
                    <Font size="14.0"/>
                </font>
            </TextArea>
        </HBox>
        <Label fx:id="contentMessage" textFill="RED">
            <font>
                <Font name="Arial" size="12.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </VBox.margin>
        </Label>
        <Button mnemonicParsing="false" onAction="#addButtonClicked" text="Dodaj">
            <font>
                <Font name="Arial Black" size="16.0"/>
            </font>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
    </VBox>
</AnchorPane>
