<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="640.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.gbsdevelopers.gbdziennik.user.AddGradeController">
   <ImageView fx:id="backgroundImage" fitHeight="640.0" fitWidth="480.0" pickOnBounds="true" preserveRatio="true"/>
   <VBox alignment="CENTER" prefHeight="640.0" prefWidth="480.0" AnchorPane.bottomAnchor="0.0"
         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
         <Label text="Lekcja">
            <font>
               <Font name="Arial Black" size="16.0"/>
            </font>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
         </Label>
         <ChoiceBox fx:id="lessonChoiceBox" prefWidth="150.0">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
         </ChoiceBox>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
         <Label text="UczeÅ„">
            <font>
               <Font name="Arial Black" size="16.0"/>
            </font>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
         </Label>
         <ChoiceBox fx:id="studentsChoiceBox" disable="true" prefWidth="150.0">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
         </ChoiceBox>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
         <Label text="Ocena">
            <font>
               <Font name="Arial Black" size="16.0"/>
            </font>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
         </Label>
         <TextField fx:id="gradeTextField" alignment="CENTER">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
            <padding>
               <Insets bottom="1.0" left="5.0" right="5.0" top="1.0"/>
            </padding>
            <font>
               <Font size="14.0"/>
            </font>
         </TextField>
         <Label fx:id="gradeMessage" textFill="RED">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
            <font>
               <Font name="Arial" size="12.0"/>
            </font>
         </Label>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
         <Label text="Waga">
            <font>
               <Font name="Arial Black" size="16.0"/>
            </font>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
         </Label>
         <TextField fx:id="weightTextField" alignment="CENTER">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
            <padding>
               <Insets bottom="1.0" left="5.0" right="5.0" top="1.0"/>
            </padding>
            <font>
               <Font size="14.0"/>
            </font>
         </TextField>
         <Label fx:id="weightMessage" textFill="RED">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
            <font>
               <Font name="Arial" size="12.0"/>
            </font>
         </Label>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
         <Label text="Opis">
            <font>
               <Font name="Arial Black" size="16.0"/>
            </font>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
         </Label>
         <TextArea fx:id="descriptionTextArea" prefHeight="200.0" prefWidth="200.0" wrapText="true">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
            <padding>
               <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
            </padding>
            <font>
               <Font size="14.0"/>
            </font>
         </TextArea>
         <Label fx:id="descriptionMessage" textFill="RED">
            <font>
               <Font name="Arial" size="12.0"/>
            </font>
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </HBox.margin>
         </Label>
      </HBox>
      <Button mnemonicParsing="false" onAction="#addButtonClicked" text="Dodaj">
         <font>
            <Font name="Arial Black" size="16.0"/>
         </font>
         <VBox.margin>
            <Insets top="10.0"/>
         </VBox.margin>
      </Button>
   </VBox>
</AnchorPane>
